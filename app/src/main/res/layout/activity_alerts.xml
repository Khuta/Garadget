<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.views.AlertsActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_alerts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/alerts_event_layout"
                    android:id="@+id/some"/>
                <include
                    layout="@layout/layout_time_out"/>

                <include
                    layout="@layout/layout_night_alerts"/>

                <include
                    layout="@layout/layout_location"/>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>